<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bigskysolutionsinc.boesen.spinrt_back.ChooseClass">

    <CheckedTextView
        android:id="@+id/ctv1"
        android:layout_width="350dp"
        android:layout_height="36dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:checkMark="?android:attr/textCheckMark"
        android:checked="false"
        android:text="@string/class1"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_marginStart="30dp" />


    <CheckedTextView
        android:id="@+id/ctv2"
        android:layout_width="350dp"
        android:layout_height="36dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:checkMark="?android:attr/textCheckMark"
        android:checked="false"
        android:text="@string/class2"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        android:layout_marginStart="30dp" />

    <CheckedTextView
        android:id="@+id/ctv3"
        android:layout_width="350dp"
        android:layout_height="36dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="26dp"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:checkMark="?android:attr/textCheckMark"
        android:checked="false"
        android:text="@string/class3"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2"
        android:layout_marginStart="30dp" />

    <RadioGroup
        android:layout_width="270dp"
        android:layout_height="61dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ctv3"
        android:id="@+id/radioGroup3"
        android:layout_marginStart="50dp">

        <RadioButton
            android:id="@+id/rb5"
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/timeRb6"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="205dp" />

        <RadioButton
            android:id="@+id/rb6"
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/timeRb5"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="93dp" />
    </RadioGroup>

    <CheckedTextView
        android:id="@+id/ctv4"
        android:layout_width="350dp"
        android:layout_height="36dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="26dp"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:checkMark="?android:attr/textCheckMark"
        android:checked="false"
        android:text="@string/class4"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup3"
        android:layout_marginStart="30dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sectionClass"
        android:textSize="24sp"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="30dp" />

    <RadioGroup
        android:id="@+id/radioGroup4"
        android:layout_width="270dp"
        android:layout_height="69dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ctv4"
        tools:layout_editor_absoluteY="461dp">

        <RadioButton
            android:id="@+id/rb7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/timeRb2"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="205dp" />

        <RadioButton
            android:id="@+id/rb8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/timeRb5"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="34dp" />

    </RadioGroup>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnNext"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="31dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginEnd="31dp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="265dp"
        android:layout_height="65dp"
        android:layout_marginLeft="102dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ctv1"
        tools:layout_editor_absoluteY="96dp">

        <RadioButton
            android:id="@+id/rb1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/timeRb2"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="93dp" />

        <RadioButton
            android:id="@+id/rb2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/timeRb1"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="32dp" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="273dp"
        android:layout_height="59dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ctv2">

        <RadioButton
            android:id="@+id/rb3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/timeRb3"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="93dp" />

        <RadioButton
            android:id="@+id/rb4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:text="@string/timeRb4"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="93dp" />
    </RadioGroup>

</android.support.constraint.ConstraintLayout>
